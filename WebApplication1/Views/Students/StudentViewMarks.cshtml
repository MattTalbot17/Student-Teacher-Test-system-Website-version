@model IEnumerable<WebApplication1.Models.Student_Test>

@{
    ViewBag.Title = "StudentViewMarks";
    int count = 1;
}

<h2>View Tests</h2>
<table class="table">
    <tr>
        <th>
            Test Name
        </th>
        <th>
            Mark (%):
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TestName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestMark)
            </td>
            <td>
                @Html.ActionLink("View Memo", "ViewMemo", new { selectedTestName = item.TestName }) |
            </td>
        </tr>
            if (count == 1)
            {
                @Html.ActionLink("Edit Profile", "Edit", new { id = item.StudentNumber })
            }
            count++;
    }

</table>
