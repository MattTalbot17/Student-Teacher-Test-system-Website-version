@model WebApplication1.Models.Lecturer

@{
    ViewBag.Title = "Lecturer Login";
}

<h2>Lecturer Login</h2>
<span style="color:red;">@ViewBag.Error</span>
@using (Html.BeginForm("LecturerLogin", "Lecturers", FormMethod.Post))
{
    <fieldset>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }
        <table>
            <tr>
                <td>
                    Lecturer ID
                </td>
                <td>
                    @Html.TextBoxFor(l => l.LecturerID)
                </td>
                <td>
                    @Html.ValidationMessageFor(l => l.LecturerID)
                </td>
            </tr>
            <tr>
                <td>
                    Password
                </td>
                <td>
                    @Html.PasswordFor(a => a.L_Password)
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.L_Password)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Login" />
                </td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.ActionLink("Student Log In", "StudentLogin", "Students")
                </td>
            </tr>
        </table>
    </fieldset>
}
